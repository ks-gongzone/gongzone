<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gongzone.central.member.follow.mapper.FollowMapper">

    <select id="followList" resultType="Follow">
        SELECT
            f.m_target_no AS memberTargetno,
            f.follow_date AS followDate,
            CASE
                WHEN m.m_nick IS NULL OR m.m_nick = '' THEN m.m_name
                ELSE m.m_nick
                END AS displayName
        FROM
            follow AS f
        INNER JOIN
                member AS m
        ON
            f.m_target_no = m.m_no
        WHERE
            m_no = #{memberNo};
    </select>

    <insert id="insertFollow" parameterType="Follow">
        INSERT INTO follow
            (m_no, m_target_no)
        VALUES
            (#{memberNo}, #{memberTargetNo})
    </insert>

    <delete id="deleteFollow">
        DELETE FROM follow
               WHERE
                   m_target_no = #{memberTargetNo}
    </delete>

</mapper>